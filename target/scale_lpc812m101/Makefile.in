
CFLAGS += -DARCH_ARMV6M -Wall -march=armv6-m -mcpu=cortex-m0plus -mthumb -nostartfiles -O2
CFLAGS += -T$(UAS_ROOT)/external/scale-hw/target/lpc812m101jdh16/scale.ld
CFLAGS += -L$(UAS_ROOT)/external/scale-hw/share/lpc81x
CFLAGS += -I$(UAS_ROOT)/external/scale-hw/share
CFLAGS += -I$(UAS_ROOT)/external/scale-hw/share/lpc81x
CFLAGS += -I$(UAS_ROOT)/external/scale-hw/target/lpc812m101jdh16

CC      = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-gcc
LD      = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-ld     
AS      = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-as     
OBJDUMP = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-objdump
OBJCOPY = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-objcopy

TARGET_SRCS = $(UAS_ROOT)/external/scale-hw/share/lpc81x/crt0.S \
              $(UAS_ROOT)/external/scale-hw/share/lpc81x/lpc81x.S \
              $(UAS_ROOT)/target/scale_lpc812m101/lpc81x_bsp.c \
              $(UAS_ROOT)/external/scale-hw/target/lpc812m101jdh16/scale.c

LPC812_SCOPE_CONFIG = $(UAS_ROOT)/target/scale_lpc812m101/picoscope5000.cfg
LPC812_POWER_CHANNEL= B
LPC812_TRS_FIXED    = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-fixed.trs
LPC812_TRS_RANDOM   = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-random.trs

LPC812_TT_GRAPH     = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-ttrace.svg
LPC812_TT_AVG       = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-averages.svg

program: $(HEX_OUT)
	lpc21isp -wipe -hex $< $(USB_PORT) $(USB_BAUD) 12000


$(LPC812_TRS_RANDOM): $(LPC812_TRS_FIXED)
$(LPC812_TRS_FIXED) : 
	$(TTEST_CAPTURE) -n $(TTEST_NUM_TRACES) \
                     -b $(USB_BAUD) \
                        $(USB_PORT) \
                        $(LPC812_SCOPE_CONFIG) \
                        $(LPC812_POWER_CHANNEL) \
                        $(LPC812_TRS_FIXED) \
                        $(LPC812_TRS_RANDOM)

$(LPC812_TT_GRAPH): $(LPC812_TT_AVG)
$(LPC812_TT_AVG) : $(LPC812_TRS_RANDOM)
	$(TTEST_ANALYSE) \
        --graph-ttest       $(LPC812_TT_GRAPH) \
        --graph-avg-trace   $(LPC812_TT_AVG) \
        $(LPC812_TRS_FIXED) \
        $(LPC812_TRS_RANDOM)

ttest: $(LPC812_TT_GRAPH) $(LPC812_TT_AVG)


