
CFLAGS += -DARCH_ARMV6M -Wall -march=armv6-m -mcpu=cortex-m0 -mthumb -nostartfiles -O2
CFLAGS += -T$(UAS_ROOT)/external/scale-hw/target/lpc1114fn28/scale.ld
CFLAGS += -L$(UAS_ROOT)/external/scale-hw/share/lpc111x
CFLAGS += -I$(UAS_ROOT)/external/scale-hw/share
CFLAGS += -I$(UAS_ROOT)/external/scale-hw/share/lpc111x
CFLAGS += -I$(UAS_ROOT)/external/scale-hw/target/lpc1114fn28

CC      = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-gcc
LD      = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-ld     
AS      = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-as     
OBJDUMP = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-objdump
OBJCOPY = $(UAS_ARM_TOOLCHAIN_ROOT)/arm-none-eabi-objcopy

TARGET_SRCS = $(UAS_ROOT)/external/scale-hw/share/lpc111x/crt0.S \
              $(UAS_ROOT)/external/scale-hw/share/lpc111x/lpc111x.S \
              $(UAS_ROOT)/target/scale_lpc1114fn28/lpc111x_bsp.c \
              $(UAS_ROOT)/external/scale-hw/target/lpc1114fn28/scale.c

LPC1114_SCOPE_CONFIG = $(UAS_ROOT)/target/scale_lpc1114fn28/picoscope5000.cfg
LPC1114_POWER_CHANNEL= B
LPC1114_TRS_FIXED    = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-fixed.trs
LPC1114_TRS_RANDOM   = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-random.trs

LPC1114_TT_GRAPH     = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-ttrace.svg
LPC1114_TT_AVG       = $(UAS_EXPERIMENT_BUILD)/ttest-$(TTEST_NAME)-averages.svg

program: $(HEX_OUT)
	lpc21isp -wipe -hex $< $(USB_PORT) $(USB_BAUD) 12000


$(LPC1114_TRS_RANDOM): $(LPC1114_TRS_FIXED)
$(LPC1114_TRS_FIXED) : 
	$(TTEST_CAPTURE) -n $(TTEST_NUM_TRACES) \
                     -b $(USB_BAUD) \
                        $(USB_PORT) \
                        $(LPC1114_SCOPE_CONFIG) \
                        $(LPC1114_POWER_CHANNEL) \
                        $(LPC1114_TRS_FIXED) \
                        $(LPC1114_TRS_RANDOM)

$(LPC1114_TT_GRAPH): $(LPC1114_TT_AVG)
$(LPC1114_TT_AVG) : $(LPC1114_TRS_RANDOM)
	$(TTEST_ANALYSE) \
        --graph-ttest       $(LPC1114_TT_GRAPH) \
        --graph-avg-trace   $(LPC1114_TT_AVG) \
        $(LPC1114_TRS_FIXED) \
        $(LPC1114_TRS_RANDOM)

ttest: $(LPC1114_TT_GRAPH) $(LPC1114_TT_AVG)

